# Environment Configuration Template for Distributed AI Platform
# Copy this file to .env and fill in your values

# =============================================================================
# GENERAL SETTINGS
# =============================================================================

# Timezone for all services
TZ=America/New_York

# Default log level (debug, info, warning, error)
LOG_LEVEL=info

# Platform domain suffix (e.g., .local, .lan, .home)
# This is used for all machine hostnames (erebus.local becomes erebus${PLATFORM_DOMAIN})
PLATFORM_DOMAIN=.local

# Domain name for services (used by Traefik)
DOMAIN=ai.local

# Admin email for Let's Encrypt (if using HTTPS)
ADMIN_EMAIL=admin@example.com

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# NFS Shares from TrueNAS
NFS_SERVER=poseidon${PLATFORM_DOMAIN:-.local}
NFS_MODELS_PATH=/mnt/tank/models
NFS_SHARED_PATH=/mnt/tank/shared

# Docker Swarm advertise address (if using Swarm mode)
ADVERTISE_ADDR=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme_postgres_password
POSTGRES_DB=ai_platform
POSTGRES_HOST=erebus${PLATFORM_DOMAIN:-.local}
POSTGRES_PORT=5432

# Redis
REDIS_PASSWORD=changeme_redis_password
REDIS_HOST=erebus${PLATFORM_DOMAIN:-.local}
REDIS_PORT=6379

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================

# Open-WebUI
OPENWEBUI_PORT=3000
OPENWEBUI_SECRET_KEY=changeme_openwebui_secret_key
WEBUI_AUTH=True
WEBUI_NAME=Distributed AI Platform

# LiteLLM
LITELLM_PORT=4000
LITELLM_MASTER_KEY=changeme_litellm_master_key
LITELLM_DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/litellm
LITELLM_REDIS_URL=redis://default:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# Ollama Settings
OLLAMA_KEEP_ALIVE=30m
OLLAMA_MAX_LOADED_MODELS=2
OLLAMA_NUM_PARALLEL=4

# API Keys for External Services
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_API_KEY=
GROQ_API_KEY=
TOGETHER_API_KEY=

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Grafana
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=changeme_grafana_password
GF_SERVER_ROOT_URL=http://grafana.${DOMAIN}

# Prometheus
PROMETHEUS_RETENTION=30d

# =============================================================================
# VECTOR DATABASE CONFIGURATION
# =============================================================================

# Qdrant
QDRANT_API_KEY=changeme_qdrant_api_key
QDRANT_PORT=6333

# =============================================================================
# OPENAPI SERVERS CONFIGURATION
# =============================================================================

# Weather Server
OPENWEATHER_API_KEY=your_openweather_api_key

# Brave Search
BRAVE_API_KEY=your_brave_api_key

# Other OpenAPI Server Keys
SERPER_API_KEY=
SERPAPI_API_KEY=

# =============================================================================
# RESOURCE LIMITS
# =============================================================================

# Default memory limits for services
DEFAULT_MEMORY_LIMIT=4G
DEFAULT_MEMORY_RESERVATION=2G

# GPU-specific limits
GPU_MEMORY_LIMIT=24G
GPU_COUNT=1

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# JWT Secret for authentication
JWT_SECRET=changeme_jwt_secret_key

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://open-webui.${DOMAIN}

# SSL/TLS Settings
USE_SSL=false
SSL_CERT_PATH=/etc/ssl/certs
SSL_KEY_PATH=/etc/ssl/private

# =============================================================================
# STORAGE PATHS (Local to each machine)
# =============================================================================

# Base data directory
DATA_DIR=/opt/ai-platform/data

# Logs directory
LOGS_DIR=/opt/ai-platform/logs

# Temporary files
TEMP_DIR=/opt/ai-platform/tmp

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable experimental features
ENABLE_EXPERIMENTAL=false

# Enable debug mode
DEBUG_MODE=false

# Enable metrics collection
ENABLE_METRICS=true

# Enable distributed tracing
ENABLE_TRACING=false

# =============================================================================
# MACHINE-SPECIFIC SETTINGS
# =============================================================================

# These are typically set in machine-specific .env files
# MACHINE_NAME=
# MACHINE_ROLE=
# MACHINE_GPU_TYPE=
# MACHINE_GPU_COUNT=
